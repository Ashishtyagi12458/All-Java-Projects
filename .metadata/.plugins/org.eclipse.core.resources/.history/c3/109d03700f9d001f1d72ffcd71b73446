package ProblemSolve;

public class MuntaionValue {
	public static int Muntain(int arr[]) {
	
	for(int i=0;i<arr.length-1;i++) {
		if(arr[i]<arr[i+1]) {
			return i;
		}
		
	}
	return -1;
	}
	

	public static void main(String[] args) {

		int x[]= {0,3,4,2,1};
		int x1=Muntain(x);
		System.out.println(x1);
	}

}
